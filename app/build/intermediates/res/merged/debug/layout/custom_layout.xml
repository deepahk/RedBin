<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">



<TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:id="@+id/tl1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/etxt_fromdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="@string/from_date" />

        <EditText
            android:id="@+id/etxt_todate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="@string/to_date" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:text="LOC" android:gravity="center"
                android:textSize="18dp"
                android:layout_span="20"
                android:background="@drawable/border_style2"
                android:id="@+id/textView"
                />
        </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="50dp"
        android:paddingBottom="100dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="TEMP" android:gravity="center"
            android:textSize="18dp"
            android:layout_span="10"
            android:background="@drawable/border_style"
            android:drawableLeft="@drawable/temperature"
            android:id="@+id/textView1" />


        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="HUM" android:gravity="center"
            android:id="@+id/textView2"
            android:textSize="18dp"
            android:background="@drawable/border_style"
            android:drawableLeft="@drawable/humidity"
            android:layout_span="10"
            />

    </TableRow>

 </TableLayout>

 <com.jjoe64.graphview.GraphView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/graph2" />


